# Discord webhooks for notifications and status updates
DISCORD_WEBHOOK_URL=your_webhook_url_here
INTERNAL_STATUS_WEBHOOK=your_internal_webhook_url_here

# Watermark service configuration
WATERMARK_SERVICE_BASE_URL=http://localhost:8080

# Internal API security
INTERNAL_API_KEY=your_api_key_here

# Redis configuration
REDIS_PORT=6382

# Application URL
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Database configuration
DATABASE_URL=postgresql://username:password@localhost:5432/database_name?schema=public
DATABASE_USERNAME=database_username
DATABASE_PASSWORD=strong_password_here
DATABASE_NAME=database_name

# Security keys and tokens
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here
HMAC_KEY=your_hmac_key_here

# SMTP configuration for email
SMTP_HOST=smtp.provider.com
SMTP_PORT=587
SMTP_USER=your_smtp_username
SMTP_PASSWORD=your_smtp_password
SMTP_FROM=notifications@yourdomain.com
SMTP_FROM_NAME=Your App Name

# OAuth - Google authentication
GOOGLE_CLIENT_SECRET=your_google_client_secret
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your_google_client_id
NEXT_PUBLIC_GOOGLE_REDIRECT_URI=http://localhost:3000/api/auth/oauth/google

# Cloudflare Turnstile (CAPTCHA alternative)
TURNSTILE_SECRET=your_turnstile_secret_key
NEXT_PUBLIC_TURNSTILE_SITE_KEY=your_turnstile_site_key

# OAuth - GitHub authentication
GITHUB_CLIENT_SECRET=your_github_client_secret
NEXT_PUBLIC_GITHUB_CLIENT_ID=your_github_client_id
NEXT_PUBLIC_GITHUB_REDIRECT_URI=http://localhost:3000/api/auth/oauth/github

# Sentry error tracking
SENTRY_AUTH_TOKEN=your_sentry_auth_token
SENTRY_SUPPRESS_TURBOPACK_WARNING=1

# Public object storage (Cloudflare R2 or S3-compatible)
PUBLIC_OBJECT_STORAGE_ENDPOINT=your_storage_endpoint
PUBLIC_OBJECT_STORAGE_BUCKET_NAME=your_public_bucket_name
PUBLIC_OBJECT_STORAGE_ACCESS_KEY=your_access_key
PUBLIC_OBJECT_STORAGE_SECRET_KEY=your_secret_key
PUBLIC_OBJECT_STORAGE_BASE_URL=https://storage.yourdomain.com

# Private object storage (Cloudflare R2 or S3-compatible)
PRIVATE_OBJECT_STORAGE_ENDPOINT=your_storage_endpoint
PRIVATE_OBJECT_STORAGE_BUCKET_NAME=your_private_bucket_name
PRIVATE_OBJECT_STORAGE_ACCESS_KEY=your_access_key
PRIVATE_OBJECT_STORAGE_SECRET_KEY=your_secret_key

# Stripe payment processing
STRIPE_PRICE_ID=your_stripe_price_id
STRIPE_PUBLIC_KEY=your_stripe_public_key
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret
