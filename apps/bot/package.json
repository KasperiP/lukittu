{
  "name": "lukittu-bot",
  "version": "0.1.0",
  "scripts": {
    "dev": "tsx watch --env-file=.env src/index.ts",
    "build": "tsc && pnpm sentry:sourcemaps",
    "start": "node --env-file=.env --import ./dist/instrument.js dist/index.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "sentry:sourcemaps": "sentry-cli sourcemaps inject --org lukittu --project lukittu-bot ./dist && sentry-cli sourcemaps upload --org lukittu --project lukittu-bot ./dist"
  },
  "dependencies": {
    "@lukittu/shared": "workspace:*",
    "@sentry/cli": "^2.55.0",
    "@sentry/node": "^10.15.0",
    "@sentry/profiling-node": "^10.15.0",
    "discord.js": "^14.19.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.24.0",
    "eslint": "^9.24.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-prettier": "^5.2.6",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.30.1"
  }
}
